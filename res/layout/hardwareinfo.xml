<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/frame_64e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_1447"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processor"
                android:textSize="12sp"
                style="@style/dotTextPrimaryMediumNew" />

            <TextView
                android:id="@+id/device_chipset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unknown"
                android:gravity="bottom"
                style="@style/dotTextPrimaryMedium"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame3445s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/frame_1448"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textSize="12sp"
                style="@style/dotTextPrimaryMediumNew">
            </TextView>

            <TextView
                android:id="@+id/device_ram"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Unknown"
                android:layout_weight="1"
                android:gravity="bottom"
                style="@style/dotTextPrimaryMedium">
            </TextView>
            
            <TextView
                android:id="@+id/device_storage"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Unknown"
                android:gravity="bottom"
                style="@style/dotTextPrimaryMedium">
            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/frame_64ed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_1449"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textSize="12sp"
                style="@style/dotTextPrimaryMediumNew" />

            <TextView
                android:id="@+id/device_battery_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unknown"
                android:gravity="bottom"
                style="@style/dotTextPrimaryMedium"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame3445ss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/frame_1450"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen"
                android:textSize="12sp"
                style="@style/dotTextPrimaryMediumNew">
            </TextView>

            <TextView
                android:id="@+id/device_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Unknown"
                android:layout_weight="1"
                android:gravity="bottom"
                style="@style/dotTextPrimaryMedium">
            </TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
